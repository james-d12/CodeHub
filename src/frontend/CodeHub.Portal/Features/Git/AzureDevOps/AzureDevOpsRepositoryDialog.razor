@if (_repository == null)
{
    <MudProgressCircular Color="Color.Default" Indeterminate="true"/>
}
else
{
    <MudDialog Class="pa-6">
        <TitleContent>
            <MudText Typo="Typo.h5" Align="Align.Center">
                @_repository.Name Repository
            </MudText>
        </TitleContent>

        <DialogContent>
            <MudPaper Class="pa-4" Elevation="0">
                <MudGrid>
                    <MudItem xs="12" sm="12">
                        <MudText Typo="Typo.caption" Color="Color.Primary">Owner</MudText>
                        <MudText Typo="Typo.subtitle1">@_repository.Owner.Name</MudText>
                    </MudItem>

                    <MudItem xs="12" sm="12">
                        <MudText Typo="Typo.caption" Color="Color.Primary">URL</MudText>
                        <MudText>
                            <MudLink Typo="Typo.subtitle1" Href="@_repository.Url.ToString()"
                                     Target="_blank">@_repository.Url</MudLink>
                        </MudText>
                    </MudItem>

                    <MudItem xs="12" sm="12">
                        <MudText Typo="Typo.caption" Color="Color.Primary">Default Branch</MudText>
                        <MudText Typo="Typo.subtitle1">@_repository.DefaultBranch</MudText>
                    </MudItem>

                    <MudItem xs="12" sm="12">
                        <MudText Typo="Typo.caption" Color="Color.Primary">Maintenance</MudText>
                        <MudText>
                            <MudChip T="bool" Color="@(_repository.IsInMaintenance ? Color.Warning : Color.Success)">
                                @_repository.IsInMaintenance
                            </MudChip>
                        </MudText>
                    </MudItem>

                    <MudItem xs="12" sm="12">
                        <MudText Typo="Typo.caption" Color="Color.Primary">Disabled</MudText>
                        <MudText>
                            <MudChip T="bool" Color="@(_repository.IsDisabled ? Color.Error : Color.Success)">
                                @_repository.IsDisabled
                            </MudChip>
                        </MudText>
                    </MudItem>
                </MudGrid>
            </MudPaper>
        </DialogContent>
        <DialogActions>
            <MudButton Color="Color.Primary" OnClick="Submit">Ok</MudButton>
        </DialogActions>
    </MudDialog>
}

